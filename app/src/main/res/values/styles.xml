<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/PopupTheme</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="Button" parent="android:Widget.Material.Button" tools:targetApi="lollipop">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Button.Negative">
        <item name="android:textColor">@color/colorNegative</item>
        <item name="android:background">@drawable/btn_negative</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Positive">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_positive</item>
    </style>

    <style name="Button.Neutral">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/btn_neutral</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBrown</item>
    </style>

    <style name="TextHorizontal" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorTextBrown</item>
    </style>

    <style name="Text.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHorizontal.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">13sp</item>
    </style>

</resources>
